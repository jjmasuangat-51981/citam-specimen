generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model campuses {
  campus_id   Int           @id @default(autoincrement())
  campus_name String        @db.VarChar(50)
  departments departments[]

  @@map("campuses")
}

model daily_reports {
  report_id         Int                        @id @default(autoincrement())
  user_id           Int
  lab_id            Int
  report_date       DateTime                   @db.Date
  general_remarks   String?                    @db.Text
  status            daily_reports_status?      @default(Pending)
  created_at        DateTime?                  @default(now()) @db.Timestamp(0)
  procedures        daily_report_procedures[]
  laboratories      laboratories               @relation(fields: [lab_id], references: [lab_id])
  users             users                      @relation(fields: [user_id], references: [user_id])
  workstation_items report_workstation_items[]

  @@index([lab_id], map: "lab_id")
  @@index([user_id], map: "user_id")
  @@map("daily_reports")
}

model departments {
  dept_id        Int            @id @default(autoincrement())
  dept_name      String         @db.VarChar(100)
  campus_id      Int?
  office_type_id Int?
  designee_name  String?        @db.VarChar(100)
  campus         campuses?      @relation(fields: [campus_id], references: [campus_id])
  office_type    office_types?  @relation(fields: [office_type_id], references: [type_id])
  laboratories   laboratories[]

  @@index([campus_id], map: "campus_id")
  @@index([office_type_id], map: "office_type_id")
  @@map("departments")
}

model inventory_assets {
  asset_id         Int            @id @default(autoincrement())
  lab_id           Int?
  workstation_id   Int?
  unit_id          Int?
  added_by_user_id Int?
  date_added       DateTime?      @default(now()) @db.Timestamp(0)
  details          asset_details?
  users            users?         @relation(fields: [added_by_user_id], references: [user_id])
  laboratories     laboratories?  @relation(fields: [lab_id], references: [lab_id])
  units            units?         @relation(fields: [unit_id], references: [unit_id])
  workstation      workstations?  @relation(fields: [workstation_id], references: [workstation_id])

  @@index([added_by_user_id], map: "added_by_user_id")
  @@index([lab_id], map: "lab_id")
  @@index([unit_id], map: "unit_id")
  @@index([workstation_id])
  @@map("inventory_assets")
}

model laboratories {
  lab_id           Int                @id @default(autoincrement())
  lab_name         String             @db.VarChar(50)
  location         String?            @db.VarChar(50)
  dept_id          Int?
  in_charge_id     Int?
  daily_reports    daily_reports[]
  inventory_assets inventory_assets[]
  departments      departments?       @relation(fields: [dept_id], references: [dept_id], map: "fk_lab_dept")
  workstations     workstations[]

  @@index([dept_id], map: "dept_id")
  @@index([in_charge_id])
  @@map("laboratories")
}

model users {
  user_id                Int                      @id @default(autoincrement())
  full_name              String                   @db.VarChar(100)
  email                  String                   @unique(map: "email") @db.VarChar(100)
  password_hash          String                   @db.VarChar(255)
  role                   users_role?              @default(Custodian)
  created_at             DateTime?                @default(now()) @db.Timestamp(0)
  lab_id                 Int?
  daily_reports          daily_reports[]
  equipment_borrows      equipment_borrows[]
  inventory_assets       inventory_assets[]
  lab_requests           lab_requests[]
  software_installations software_installations[]
  one_time_links        one_time_links[]
  assigned_lab           laboratories?            @relation("LabAssignment", fields: [lab_id], references: [lab_id])

  @@index([lab_id], map: "users_lab_id_fkey")
  @@map("users")
}

model device_types {
  device_type_id   Int     @id @default(autoincrement())
  device_type_name String  @db.VarChar(50)
  units            units[]

  @@map("device_types")
}

model office_types {
  type_id     Int           @id @default(autoincrement())
  type_name   String        @unique(map: "type_name") @db.VarChar(50)
  departments departments[]

  @@map("office_types")
}

model units {
  unit_id          Int                @id @default(autoincrement())
  unit_name        String             @db.VarChar(50)
  device_type_id   Int
  inventory_assets inventory_assets[]
  device_types     device_types       @relation(fields: [device_type_id], references: [device_type_id])

  @@index([device_type_id], map: "device_type_id")
  @@map("units")
}

model workstations {
  workstation_id      Int                        @id @default(autoincrement())
  workstation_name    String                     @db.VarChar(100)
  lab_id              Int?
  created_at          DateTime                   @default(now())
  status_id           Int?                       @default(1)
  workstation_remarks String?                    @db.Text
  assets              inventory_assets[]
  report_items        report_workstation_items[]
  laboratory          laboratories?              @relation(fields: [lab_id], references: [lab_id])
  current_status      asset_statuses?            @relation(fields: [status_id], references: [status_id])

  @@unique([workstation_name, lab_id])
  @@index([lab_id])
  @@index([status_id])
  @@map("workstations")
}

model asset_details {
  detail_id        Int              @id @default(autoincrement())
  asset_id         Int              @unique
  property_tag_no  String?          @unique(map: "property_tag_no") @db.VarChar(50)
  quantity         Int?             @default(1)
  description      String?          @db.Text
  serial_number    String?          @db.VarChar(100)
  date_of_purchase DateTime?        @db.Date
  asset_remarks    String?          @db.Text
  status_id        Int?             @default(1)
  asset            inventory_assets @relation(fields: [asset_id], references: [asset_id])
  current_status   asset_statuses?  @relation(fields: [status_id], references: [status_id])

  @@index([status_id])
  @@map("asset_details")
}

model daily_report_procedures {
  id              Int           @id @default(autoincrement())
  report_id       Int
  procedure_id    Int
  overall_status  String        @default("Pending") @db.VarChar(50)
  overall_remarks String?       @db.Text
  created_at      DateTime?     @default(now()) @db.Timestamp(0)
  procedure       procedures    @relation(fields: [procedure_id], references: [procedure_id])
  daily_report    daily_reports @relation(fields: [report_id], references: [report_id])

  @@index([procedure_id], map: "procedure_id")
  @@index([report_id], map: "report_id")
  @@map("daily_report_procedures")
}

model procedures {
  procedure_id            Int                       @id @default(autoincrement())
  procedure_name          String                    @db.VarChar(100)
  category                String?                   @db.VarChar(50)
  is_active               Boolean                   @default(true)
  created_at              DateTime?                 @default(now()) @db.Timestamp(0)
  daily_report_procedures daily_report_procedures[]

  @@index([procedure_id])
  @@map("procedures")
}

model report_workstation_items {
  item_id        Int           @id @default(autoincrement())
  report_id      Int
  workstation_id Int
  status         String        @default("Working") @db.VarChar(50)
  remarks        String?       @db.Text
  created_at     DateTime?     @default(now()) @db.Timestamp(0)
  daily_report   daily_reports @relation(fields: [report_id], references: [report_id])
  workstation    workstations  @relation(fields: [workstation_id], references: [workstation_id])

  @@index([report_id], map: "report_id")
  @@index([workstation_id], map: "workstation_id")
  @@map("report_workstation_items")
}

model asset_statuses {
  status_id     Int             @id @default(autoincrement())
  status_name   String          @unique @db.VarChar(50)
  asset_details asset_details[]
  workstations  workstations[]

  @@map("asset_statuses")
}

model lab_requests {
  request_id           Int                @id @default(autoincrement())
  user_id              Int?
  date                 DateTime           @db.Date
  usage_type           String             @db.VarChar(20)
  faculty_student_name String             @db.VarChar(100)
  year_level           String?            @db.VarChar(20)
  laboratory           String             @db.VarChar(20)
  printing_pages       String?            @db.VarChar(50)
  ws_number            String?            @db.VarChar(50)
  time_in              String?            @db.VarChar(10)
  time_out             String?            @db.VarChar(10)
  purpose              String             @db.Text
  requested_by         String             @db.VarChar(100)
  remarks              String?            @db.Text
  monitored_by         String?            @db.VarChar(100)
  approved_by          String?            @db.VarChar(100)
  status               lab_request_status @default(Pending)
  created_at           DateTime           @default(now()) @db.Timestamp(0)
  users                users?             @relation(fields: [user_id], references: [user_id])
  @@index([user_id])
  @@map("lab_requests")
}

model equipment_borrows {
  borrow_id            Int                     @id @default(autoincrement())
  user_id              Int?
  date                 DateTime                @db.Date
  laboratory           String                  @db.VarChar(20)
  faculty_student_name String                  @db.VarChar(100)
  year_level           String?                 @db.VarChar(20)
  release_time         String                  @db.VarChar(10)
  returned_time        String?                 @db.VarChar(10)
  equipment_list       Json
  purpose              String                  @db.Text
  requested_by         String                  @db.VarChar(100)
  remarks              String?                 @db.Text
  monitored_by         String?                 @db.VarChar(100)
  approved_by          String?                 @db.VarChar(100)
  status               equipment_borrow_status @default(Pending)
  created_at           DateTime                @default(now()) @db.Timestamp(0)
  users                users?                  @relation(fields: [user_id], references: [user_id])
  @@index([user_id])
  @@map("equipment_borrows")
}

model one_time_links {
  id              Int              @id @default(autoincrement())
  token           String            @unique @db.VarChar(255)
  form_type       String?           @db.VarChar(50)
  generated_by    Int?
  created_at      DateTime          @default(now()) @db.Timestamp(0)
  expires_at      DateTime          @db.Timestamp(0)
  used            Boolean           @default(false)
  users           users?            @relation(fields: [generated_by], references: [user_id])
  @@map("one_time_links")
}

model software_installations {
  id             Int                     @id @default(autoincrement())
  user_id         Int?
  faculty_name    String                  @db.VarChar(100)
  date            DateTime                @db.Date
  laboratory      String                  @db.VarChar(20)
  software_list   String                  @db.Text
  requested_by    String                  @db.VarChar(100)
  installation_remarks String?            @db.Text
  prepared_by     String?                 @db.VarChar(100)
  feedback_date   DateTime?               @db.Date
  status          software_install_status @default(Pending)
  created_at      DateTime                @default(now()) @db.Timestamp(0)
  users           users?                  @relation(fields: [user_id], references: [user_id])

  @@index([user_id])
  @@map("software_installations")
}

enum users_role {
  Admin
  Custodian
}

enum daily_reports_status {
  Pending
  Approved
}

enum lab_request_status {
  Pending
  Admin_Approved
  Custodian_Approved
  Denied
  Completed
}

enum equipment_borrow_status {
  Pending
  Admin_Approved
  Custodian_Approved
  Denied
  Returned
}

enum software_install_status {
  Pending
  Admin_Approved
  Custodian_Approved
  Denied
  Completed
}


